---
import Logo from "@/images/logos/logo-512x512.png";
import { Image } from "astro:assets";

const { title, image } = Astro.props;
---

<header class="mb-8">
  <h1
    class="mb-6 font-serif text-4xl leading-tight font-medium tracking-tight text-zinc-900 sm:text-5xl lg:text-5xl dark:text-zinc-100"
  >
    {title}
  </h1>

  <div
    class="flex items-center gap-3 border-t border-zinc-200 pt-4 dark:border-zinc-700"
  >
    <Image
      alt="Alexandre Mouriec"
      class="u-photo h-10 w-10 rounded-full"
      src={Logo}
    />
    <div class="flex flex-col">
      <a
        class="p-author h-card text-sm font-medium text-zinc-900 transition-colors hover:text-zinc-600 dark:text-zinc-100 dark:hover:text-zinc-300"
        href={Astro.site}
      >
        Alexandre Mouriec
      </a>
      <span class="text-xs text-zinc-500 dark:text-zinc-400">Author</span>
    </div>
  </div>
</header>

{
  image && (
    <div class="mb-8">
      <Image
        alt={image.alt}
        class="w-full rounded-lg object-cover shadow-sm"
        src={image.url}
      />
    </div>
  )
}
