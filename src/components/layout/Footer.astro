---
import Container from "@/components/common/Container.astro";
import FooterItem from "@/components/layout/FooterItem.astro";

const footerItems = [
  { external: false, href: "/now", label: "Now" },
  { external: false, href: "/colophon", label: "Colophon" },
  { external: false, href: "/feeds", label: "Feeds" },
  { external: false, href: "/uses", label: "Uses" },
  { external: false, href: "/contact", label: "Contact" },
];
---

<footer
  class="flex w-full flex-wrap px-6 pb-6 text-sm sm:flex-nowrap sm:justify-start">
  <Container>
    <div class="flex flex-col items-center justify-center md:flex-row">
      <nav class="mx-auto flex justify-center">
        {
          footerItems.map((item) => (
            <FooterItem
              external={item.external}
              href={item.href}
              key={item.href}
              label={item.label}
            />
          ))
        }
      </nav>
    </div>
  </Container>
</footer>
