---
const { external, href, label } = Astro.props;
---

<a
  aria-label={label}
  class="text-md mx-0.5 rounded-full px-3 py-2 font-medium hover:bg-black/5 hover:text-zinc-800 dark:hover:bg-zinc-700 dark:hover:text-zinc-100"
  href={href}
  rel={external ? "noopener noreferrer" : null}
  target={external ? "_blank" : "_self"}>
  {label}
</a>
