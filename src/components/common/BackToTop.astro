<a
  href="#top"
  aria-label="Back to top"
  class="back-to-top fixed right-5 bottom-16 z-50 cursor-pointer rounded-full border border-gray-200 bg-white stroke-current p-2 shadow-xs transition-all duration-500 ease-out hover:-translate-y-0.5 hover:bg-gray-100 hover:stroke-gray-600 hover:shadow-lg md:right-10 dark:border-white/25 dark:bg-gray-800 dark:stroke-white dark:hover:bg-gray-700 dark:hover:stroke-gray-200 dark:hover:shadow-white/10"
>
  <svg
    class="h-5 w-5"
    fill="none"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <line x1="12" x2="12" y1="19" y2="5"></line>
    <polyline points="5 12 12 5 19 12"></polyline>
  </svg>
</a>

<style>
  @reference {
    @import "tailwindcss";
  }

  /* CSS-only back to top button using Tailwind utilities */
  .back-to-top {
    @apply invisible translate-y-5 opacity-0;
  }

  /* Show button when scrolled down using CSS only */
  @media (min-height: 100vh) {
    .back-to-top {
      @apply visible translate-y-0 opacity-100;
    }
  }

  /* Modern scroll-driven animations */
  @supports (animation-timeline: scroll()) {
    .back-to-top {
      animation: show-back-to-top linear;
      animation-timeline: scroll();
      animation-range: 50px 100px;
    }
  }

  @keyframes show-back-to-top {
    0% {
      opacity: 0;
      visibility: hidden;
      transform: translateY(1.25rem);
    }
    100% {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Fallback for older browsers - show button by default */
  @media (max-height: 100vh) {
    .back-to-top {
      @apply visible translate-y-0 opacity-100;
    }
  }
</style>
