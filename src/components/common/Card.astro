---
const { entry } = Astro.props;
---

<div
  class="relative gap-2 rounded-2xl border border-dashed border-black/15 transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white">
  <div class="flex flex-col gap-y-1.5">
    <div class="flex flex-col gap-y-0.5">
      <h1 class="text-lg font-medium">{entry.data.title}</h1>
      <h2 class="text-muted-foreground">{entry.data.description}</h2>
      <h2 class="text-muted-foreground">
        {entry.data.pubDate.toString().slice(0, 16)}
      </h2>
    </div>
    <slot />
  </div>
</div>
