---
const { href } = Astro.props;
---

<a
  class="group relative flex w-fit flex-nowrap rounded-md py-2 pr-4 pl-8 text-sm font-medium text-zinc-600 no-underline transition-all duration-200 ease-in-out hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-400 dark:hover:bg-zinc-800 dark:hover:text-zinc-200"
  href={href}
>
  <svg
    class="absolute top-1/2 left-2 size-4 -translate-y-1/2 fill-none stroke-current stroke-2 transition-transform duration-200 ease-in-out group-hover:-translate-x-1"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <line
      class="translate-x-2 scale-x-0 transition-transform duration-200 ease-in-out group-hover:translate-x-0 group-hover:scale-x-100"
      x1="5"
      x2="19"
      y1="12"
      y2="12"></line>
    <polyline
      class="translate-x-1 transition-transform duration-200 ease-in-out group-hover:translate-x-0"
      points="12 5 5 12 12 19"></polyline>
  </svg>
  <div class="text-sm">
    <slot />
  </div>
</a>
