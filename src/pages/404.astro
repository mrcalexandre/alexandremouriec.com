---
import Link from "@/components/common/Link.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

const pageTitle = "404 Not Found";
const pageSubtitle = "Page not found";
---

<BaseLayout pageSubtitle={pageSubtitle} pageTitle={pageTitle}>
  <div class="flex flex-col items-center justify-center space-y-8 text-center">
    <div class="space-y-4">
      <h2 class="font-serif text-2xl font-semibold">Oops!</h2>
      <p class="text-md max-w-md font-light opacity-80">
        It seems like the page you're looking for doesn't exist anymore or has
        been moved.
      </p>
    </div>

    <div class="flex items-center justify-center gap-4">
      <Link
        aria-label="Return to homepage"
        class="rounded-lg bg-blue-500 px-6 py-3 text-white transition-colors duration-200 hover:bg-blue-600"
        href="/"
      >
        Go back to homepage
      </Link>
    </div>
  </div>
</BaseLayout>
