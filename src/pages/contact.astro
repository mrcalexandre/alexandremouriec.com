---
import BaseLayout from "@/layouts/BaseLayout.astro";

const pageTitle = "Contact Me";
const pageSubtitle =
  "Feel free to reach out if you'd like to discuss anything or just say hello.";
---

<BaseLayout pageSubtitle={pageSubtitle} pageTitle={pageTitle}>
  <div class="mx-auto max-w-2xl px-5 py-8">
    <form
      action="https://formspree.io/f/xvovrbod"
      class="group space-y-6"
      method="post"
    >
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <label class="mb-2 block text-sm font-medium" for="name">Name *</label
          >
          <input
            class="form-input w-full rounded-lg border border-dashed px-4 py-3 duration-300 ease-out group-hover:border-neutral-300 focus:border-neutral-300 focus:ring-2 focus:ring-blue-500/20 focus:outline-none sm:text-sm dark:group-hover:border-neutral-600 dark:focus:border-neutral-600"
            id="name"
            name="name"
            placeholder="Your name"
            required
            type="text"
          />
        </div>

        <div>
          <label class="mb-2 block text-sm font-medium" for="email"
            >Email *</label
          >
          <input
            class="form-input w-full rounded-lg border border-dashed px-4 py-3 duration-300 ease-out group-hover:border-neutral-300 focus:border-neutral-300 focus:ring-2 focus:ring-blue-500/20 focus:outline-none sm:text-sm dark:group-hover:border-neutral-600 dark:focus:border-neutral-600"
            id="email"
            name="_replyto"
            placeholder="your.email@example.com"
            required
            type="email"
          />
        </div>
      </div>

      <div>
        <label class="mb-2 block text-sm font-medium" for="message"
          >Message *</label
        >
        <textarea
          class="form-textarea w-full rounded-lg border border-dashed px-4 py-3 duration-300 ease-out group-hover:border-neutral-300 focus:border-neutral-300 focus:ring-2 focus:outline-none sm:text-sm dark:group-hover:border-neutral-600 dark:focus:border-neutral-600"
          id="message"
          name="message"
          placeholder="Write your message here..."
          required
          rows="8"></textarea>
      </div>

      <div class="flex justify-center">
        <button
          class="cursor-pointer rounded-sm border px-8 py-1.5 shadow-xs transition duration-300 hover:bg-gray-100 focus:ring-2 focus:outline-none dark:hover:bg-gray-700"
          type="submit"
        >
          Send Message
        </button>
      </div>
    </form>
  </div>
</BaseLayout>
