---
import BaseLayout from "@/layouts/BaseLayout.astro";

const pageTitle = "Contact Me";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="mx-auto px-5 pb-8">
    <form
      action="https://formspree.io/f/xvovrbod"
      class="flex flex-wrap"
      method="post">
      <div class="w-full p-3 lg:w-1/2">
        <input
          class="form-input mt-1 block w-full rounded-md px-3 py-3 shadow-sm focus:outline-none sm:text-sm"
          name="name"
          placeholder="Name"
          type="text"
        />
      </div>
      <div class="w-full p-3 lg:w-1/2">
        <input
          class="form-input mt-1 block w-full rounded-md px-3 py-3 shadow-sm focus:outline-none sm:text-sm"
          name="_replyto"
          placeholder="Email"
          type="email"
        />
      </div>
      <div class="w-full p-3">
        <textarea
          class="form-textarea mt-1 block w-full rounded-md px-3 py-3 shadow-sm focus:outline-none sm:text-sm"
          name="message"
          placeholder="Write your message here ..."
          rows="8"></textarea>
      </div>
      <div class="flex w-full justify-center p-3">
        <input
          class="cursor-pointer rounded border px-5 py-1.5 transition duration-300 hover:bg-gray-100 dark:hover:bg-gray-700"
          type="submit"
          value="Send"
        />
      </div>
    </form>
  </div>
</BaseLayout>
